@model IEnumerable<SAExpiations.Models.ExpiationOffence>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-striped table-hover" data-pagination="true" data-page-list="[10, 25, 50, 100, 200, All]">
    <thead>
        <tr>
            <th>
                <h2>Expiation Offence Code</h2>
            </th>
            <th>
                <h2>Expiation Offence Description</h2>
            </th>
            <th>
                <h2>Details</h2>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            if (item.ExpiationOffenceCode.Length > 3) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ExpiationOffenceCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ExpiationOffenceDescription)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ExpiationOffenceCode">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.ExpiationOffenceCode">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.ExpiationOffenceCode">Delete</a>
                    </td>
                </tr>
            }

}
    </tbody>
</table>
