@*@model IEnumerable<SAExpiations.Models.ExpiationOffence>*@
@model IEnumerable<SAExpiations.ViewModels.ExpiationCounter>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>


<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">

        <form method="get" asp-controller="Items" asp-action="Index" class="row">

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarText">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <input searchName="100" class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                    </li>
                    
                    <li class="nav-item" style="padding-left: 1rem">
                        <button class="btn btn-outline-success" type="submit">Search</button>
                    </li>
                    
                </ul>
            </div>
        </form>
    </div>
</nav>

<table class="table table-striped table-hover" data-pagination="true" data-page-list="[10, 25, 50, 100, 200, All]">
    <thead>
        <tr>
            <th>
                <p>Expiation Offence Code</p>
            </th>
            <th>
                <p>Expiation Offence Description</p>
            </th>
            <th>
                <p>Number of Expiation Offences</p>
            </th>
            <th>
                <p>Details</p>
            </th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        if (item.ExpiationOffenceCode.Length > 3) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ExpiationOffenceCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ExpiationOffenceDescription)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ExpiationCount)
                </td>
                <td>
                    <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.ExpiationOffenceCode">Details</a>
                </td>
            </tr>
        }
    }
    </tbody>
</table>
